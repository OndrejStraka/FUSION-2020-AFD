doi = {10.1109/TEC.2005.847955},
file = {:E$\backslash$:/Documents/Mendeley catalogue/Nandi, Toliyat, Li - 2005 - Condition monitoring and fault diagnosis of electrical motors - A review.pdf:pdf},
